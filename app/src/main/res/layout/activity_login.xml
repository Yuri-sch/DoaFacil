<?xml version="1.0" encoding="utf-8"?>
<!-- Layout da tela de login com campos de e-mail, senha e botões de ação -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp">

    <!-- Campo de texto para e-mail -->
    <EditText
        android:id="@+id/edtEmail"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Campo de texto para senha -->
    <EditText
        android:id="@+id/edtSenha"
        android:hint="Senha"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"/>

    <!-- Botão para efetuar login -->
    <Button
        android:id="@+id/btnLogin"
        android:text="Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"/>

    <!-- Botão para cadastro de Pessoa Física -->
    <Button
        android:id="@+id/btnCadastroPF"
        android:text="Cadastrar como Doador (PF)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"/>

    <!-- Botão para cadastro de Pessoa Jurídica -->
    <Button
        android:id="@+id/btnCadastroPJ"
        android:text="Cadastrar como Instituição (PJ)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>
</LinearLayout>
