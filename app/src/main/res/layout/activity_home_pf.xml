<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.HomePFActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="DoaFácil"
        app:titleTextColor="@android:color/white"
        app:popupTheme="@style/Theme.DoaFacil.PopupOverlay" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvBoasVindasPF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Olá, Doador(a)!"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:gravity="center"
            android:layout_marginBottom="32dp"/>

        <Button
            android:id="@+id/btnQueroDoar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quero Doar"
            android:padding="16dp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnInstituicoesProximas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Instituições mais próximas"
            android:padding="16dp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnDadosPessoais"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meus Dados Pessoais"
            android:padding="16dp"/>

    </LinearLayout>
</LinearLayout>